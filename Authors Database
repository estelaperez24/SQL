--Second table identifies each author by a numeric id and provide facts about their background

CREATE TABLE background (id INTEGER PRIMARY KEY, military_experience TEXT, country_origin TEXT);

INSERT INTO background VALUES (1,'yes','US');
INSERT INTO background VALUES (2,'no','UK');
INSERT INTO background VALUES (3,'no','UK');
INSERT INTO background VALUES (4,'no','India');
INSERT INTO background values (5,'no','US');
INSERT INTO background VALUES (6,'no','US');
INSERT INTO background VALUES (7,'no','US');
INSERT INTO background VALUES (8,'yes','UK');

--This JOIN table combines the authors' names with their background info

SELECT authors.name, background.military_experience, background.country_origin
FROM background
LEFT OUTER JOIN authors
ON authors.id=background.id;
